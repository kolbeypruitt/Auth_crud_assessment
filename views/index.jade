extends layout

block content
  h1= title
  p Please fill the form below if you're new here, or click log in if you already have an account.
  form(type='/signin' method='post')
    p
      label Email Address
        input(type='text' name='email')
    p
      label Password
        input(type='text' name='password')
    p
      label Verify Password
        input(type='text' name='password')
    input(type='submit' value='submit')
  a(href='/login') Log In
