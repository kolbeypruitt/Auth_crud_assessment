extends ../layout

block content
  h1= title
  div
    if errors
      each error, index in errors
        p= error
  table
    thead
      tr
        th Name
        th Phone
        th ID
    tbody
      for student in allStudents
        tr
          td
            a(href='/students/' + student._id)= student.name
          td= student.phone
          td= student._id
  p
    a(href='students/add') add student
