extends layout

block content
  h1= title
  a(href='/') back home
  p Please sign up below if you're new here.
  div
    if errors
      each error, index in errors
        p= error
  form(action='/users/signin' method='post')
    p
      label Email Address
        input(type='email' name='email')
    p
      label Password
        input(type='password' name='password')
    p
      label Verify Password
        input(type='text' name='passwordv')
    input(type='submit' value='submit')